<section id="mainSec">

 
    
    
    <form class='loginform' action="/adminsignupreq" method="post">
        
    
        <div class="main">
            <div class="container">
                <h4>Admin Signup Request </h4>
    
    <div class="rightForm">
  
                <%if(locals.alreadyReqIp){%>
                    <p class="alret alert-warning mt-3 p-2 text-center"><b><%=alreadyReqIp%></b></p>
                    
                 <%  } %>

                 <%if(locals.pending){%>

                    <p class="alret alert-success mt-3 p-2 text-center"><%=pending%> <a href="/admin">Login</a> Form</p>
                 <%  }else{%>

                    <label for=""><b><i>Your Mac Address</i></b></label>
                    <input disabled type="text" maxlength="30" name="" value="<%=locals.userIpaddress%>" id="phone" placeholder="" required/>
                    <input    type="text" maxlength="30" name="ausermac" value="<%=locals.userIpaddress%>" id="phone" placeholder="" required/>
                    <label for=""><b><i>Your Phone Number</i></b></label>
                   
                    <input type="text" maxlength="11" name="aPhone" id="phone" placeholder=" Number" required/>
                    <label for=""><b><i>Your Password</i></b></label>
                    <input type="password" name="aPassword" id="password" placeholder=" Password" minlength="5" maxlength="40" required/>
                    <input class="btn btn-danger" type="submit" name="" id="login" value="Request"/>
    

                <% } %>


            Already have an account <a class="regLink" href="/admin"> Admin Login </a>

    
    </div> 
            </div>
        </div>
    </form>
 
    </section>
 
