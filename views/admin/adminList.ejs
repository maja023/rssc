<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href='../css/users.css'>
    <title>users table</title>
</head>
<body>

    <style>

thead.thead-dark {
    text-align: center;
}

tbody {
    text-align: center;
}
        #ppic:hover{
            width: 100%;
            height: 100%;
         border-radius:0%;
        }

        #ppic{
            width: 60px;height: 60px;border-radius: 100%;
        }

        p.alret.alert-success.mt-3.p-2.text-center {
    width: 376px;
    margin: auto;
    margin-bottom: 14px;
}
    </style>




<div class="usersTablemain">
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Mac</th>
            <th scope="col">Phone</th>
            <th scope="col">Password</th>
            <th scope="col">status</th>
            <th scope="col">Operation</th>
          </tr>
        </thead>

        <tbody>
          
      
            <%if(locals.successfully_delete){%>
                <p class="alret alert-success mt-3 p-2 text-center"><b><%=successfully_delete%></b></p>

                <% } %>

            <% if(users.length>0){%>
                <%  for(let i=0;i<users.length;i++){%>
                    <tr>
                    <th scope="row"><%= users[i].id %></th>
                    <td><%= users[i].adminMac %></td>
                    <td><%= users[i].adminNumber %> </td>
                    <td><%= users[i].adminPassword %></td>
                    <td><%= users[i].adminStutas %></td>
                  
                    <td>
            
                  <%if(users[i].adminStutas=='pending'){%>
            <a href="confirm/<%=users[i].id %>"><button class="btn btn-success ">Confirm</button></a>
            
                    <%   }else{%>
                        <a href="restric/<%=users[i].id %>"><button class="btn btn-warning">restric</button></a>
            
                        <%  } %>
            
            
                        <a href="/admin-delete/<%=users[i].id %>"><button  class="btn btn-danger">Delete</button></a>
                        <!-- <a href="/edit/<%=users[i].id %>"><button  class="btn btn-success">Edit</button></a>
                        <a href="/delete/<%=users[i].id %>"><button  class="btn btn-danger">Delete</button></a> -->
            
               
                        </td>
                </tr>
            
                    <% }%>
            
                <% }else{%>
                <p style="color: red;text-align: center;padding:10px 0px">data not Found !</p>
                <% } %>
            
    


            
        </tbody>
      </table>
</div>
    
</body>
</html>